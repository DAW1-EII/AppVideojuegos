<p id="notice"><%= notice %></p>

<h1>Lista de Productos</h1>

<%= button_to 'Categorías', categories_path, method: 'get' %>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Descripción</th>
      <th>Disponible</th>
      <th>Categoría</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.available %></td>
        <td><%= product.category.nombre %></td>
        <td><%= button_to 'Mostar', product_path(product), method: 'get' %></td>
        <% if user_signed_in? %>
        <td><%= button_to 'Editar', edit_product_path(product), method: 'get' %></td>
        <td><%= button_to 'Eliminar', product_path(product), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= button_to 'Nuevo Producto', nuevo_producto_path , method: 'get'%>
<% end %>