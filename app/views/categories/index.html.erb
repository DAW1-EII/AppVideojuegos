<p id="notice"><%= notice %></p>

<h1>Categorías</h1>


<%= button_to 'Productos', products_path, method: 'get' %>


<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.nombre %></td>
        <td><%= category.description %></td>
        <td><%= button_to 'Mostar', category_path(category), method: 'get' %></td>
        <% if user_signed_in? %>
        <td><%= button_to 'Editar', edit_category_path(category), method: 'get' %></td>
        <td><%= button_to 'Eliminar', category_path(category), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= button_to 'Nueva Categoría', nueva_categoria_path , method: 'get'%>
<% end %>